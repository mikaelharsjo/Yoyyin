@model Yoyyin.Mvc.Models.User

    <tr>
        <td>
            <a href=@Model.DetailsHref class="thumbnail">
                @Html.Raw(Model.SmallProfileImageMarkup)
                @Model.DisplayName
            </a>
            <a href=@Model.DetailsHref>
                @Model.DisplayName
            </a>
        </td>
        <td>
            <span class="label">@Html.ActionLink(Model.SniHeadTitle, "ListBySniHead", new { id = Model.SniHeadId})</span>
            <h2>@Model.FirstIdea.Title</h2>
            <p>@Html.Raw(Model.FirstIdea.Description)</p>
        </td>
    </tr>