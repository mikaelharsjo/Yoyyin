@model Yoyyin.Mvc.ViewModels.User

@Html.Partial("Breadcrumb")
<div class="row-fluid">
    <div class="span2">        
        <div>
            <img src="@Model.ProfileImageSrc?width=80" class="img-polaroid profileImage" />            
        </div>
        <strong>@Model.DisplayName</strong><br />
        @Model.City
        <p>
            <span class="label label-success">@Model.UserType</span>
        </p>
    </div>
    <div class="span10">
        @Model.Presentation
        @foreach (var idea in Model.Ideas)
        {            
            <div class="well">
                <span class="label">@Html.ActionLink(@idea.SniHeadTitle, "ListBySniHead", new { id = @idea.SniHeadId })</span>
                <h2>
                    <img src="/Images/glyphicons_064_lightbulb.png" />
                    @idea.Title
                </h2>
            @*<p>@Html.Raw(Model.FirstIdea.Description)</p>*@
        
                <h3>@Model.DisplayName söker personer som är:</h3>
                @*@Html.Raw(Model.UserTypesNeededMarkup)*@
                <h3>
                    ...och kan</h3>
                @*@Html.Raw(Model.CompetencesNeededmarkup)*@
            </div>
        }
    </div>
</div>
