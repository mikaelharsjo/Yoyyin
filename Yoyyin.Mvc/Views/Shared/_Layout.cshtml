@using Yoyyin.Mvc.Helpers
@using System.Web.Optimization

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Yoyyin - Sammanför människor med idéer</title>
    <link href="~/favicon.png" rel="shortcut icon" type="image/x-icon" />
    @*<link rel="stylesheet" type="text/css" href="/Content/Less/yoyyin.less">*@
    @Styles.Render("~/Content/Css/bundled.css")
    <script src=@System.Web.Optimization.BundleTable.Bundles.ResolveBundleUrl("~/BundledScripts")></script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
    @Html.Partial(Request.IsAuthenticated ? "HeaderWhenLoggedIn" : "Header")
        
    @RenderSection("jumbotron", required: false)
        
    <section id="sectionMainContent" class="container">
        @RenderBody()
    </section>        
    
    <footer>
        <div class="container">            
            <p class="pull-right"><a href="#">Tillbaka till toppen</a></p>
            <p>&copy; @DateTime.Now.Year - Yoyyin Ventures</p>
            <ul id="social">
                <li><a href="http://facebook.com" class="facebook">Facebook</a></li>
                <li><a href="http://twitter.com" class="twitter">Twitter</a></li>
            </ul>            
        </div>
    </footer>

    
    <script src="http://maps.google.com/maps/api/js?sensor=false"></script>

    @Scripts.Render("~/Scripts/bundled.js")
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.12/jquery-ui.min.js" type="text/javascript" charset="utf-8"></script>
    <script src="/Scripts/lib/tag-it.js" type="text/javascript"></script>
    <script src="/Scripts/yoyyin/yoyyin.quickSearch.js" type="text/javascript"></script>
@*    <script src="/Scripts/lib/jquery.gomap-1.3.2.min.js" type="text/javascript"></script>
    <script src="/Scripts/lib/bootstrap.js" type="text/javascript"></script>
    <script src="/Scripts/lib/tag-it.js" type="text/javascript"></script>
    <script src="/Scripts/lib/require.js" type="text/javascript"></script>
    <script src="/Scripts/yoyyin/yoyyin.quickSearch.js" type="text/javascript"></script>
    <script src="/Scripts/yoyyin/yoyyin.init.js" type="text/javascript"></script>
    <script src="/Scripts/yoyyin/registrationMain.js" type="text/javascript"></script>
*@</body>
</html>
