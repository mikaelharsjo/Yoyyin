@model IEnumerable<Yoyyin.Mvc.Models.UserWithFirstIdea>
@foreach (var user in Model)
{
    
    <div class="well stackedUser">
        <div class="userWrapper ui-helper-clearfix">
            <div class="stackedUserLeft">
                <a href=@user.DetailsHref class="thumbnail">
                    <img src=@user.SmallProfileImageSrc />
                </a>
            </div>
            <div class="stackedUserRight">
                Jag är:<br />
                @Html.Raw(user.UserTypeMarkup)
                <hr />
                Jag söker:<br />
                @Html.Raw(user.UserTypesNeededMarkup)
                <hr />
                Bransch: <span class="label">@Html.ActionLink(user.SniHeadTitle, "ListBySniHead", new { id = user.SniHeadId })</span>
            </div>
        </div>
        <hr/>
        <a href=@user.DetailsHref><strong>@user.DisplayName</strong></a> @user.City
@*        <h2>@user.FirstIdea.Title</h2>
        <p>@Html.Raw(user.FirstIdea.Description)</p>
*@    </div>
}