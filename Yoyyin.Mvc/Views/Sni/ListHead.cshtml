@using Yoyyin.Mvc.Helpers
@model System.Collections.Generic.List<Yoyyin.Mvc.Models.SniHead>
@Html.PageHeader("Branscher", "Klicka för att hitta en affärspartner inom din bransch")

<div class="alert alert-info">
    <button class="close" data-dismiss="alert">
        ×</button>Dessa är baserade på SNI: SNI betyder Svensk Näringsgrensindelning
    och bygger på EU:s standard, NACE.</div>
<ul class="nav nav-pills nav-stacked">
    @foreach (var sni in @Model)
    {
        <li class="dropdown"><a class="dropdown-toggle" data-toggle="dropdown" href="#">
            @Html.Raw(sni.Title)
            <b class="caret"></b></a>
            <ul class="dropdown-menu">
                <a href="@sni.UrlToIdeas">Visa affärsidéer</a> <a href="@sni.UrlToItems">Visa undergrupper</a>
            </ul>
        </li>
    }
</ul>
