<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Yoyyin - Sammanför människor med idéer</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <link href="@System.Web.Optimization.BundleTable.Bundles.ResolveBundleUrl("~/Content/css")" rel="stylesheet" type="text/css" />
    @*<link href="../../Content/bootstrap.css" rel="stylesheet" type="text/css" />*@
    @*<script src="@System.Web.Optimization.BundleTable.Bundles.ResolveBundleUrl("~/Scripts/js")"></script>*@
    <link rel="stylesheet/less" type="text/css" href="/Content/Less/site.less">
    <link rel="stylesheet/less" type="text/css" href="/Content/Less/bootstrap.less">
    <script src="/Scripts/less-1.3.0.min.js" type="text/javascript"></script>
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    <header>
            <div class="content-wrapper">
                    <nav class="navbar navbar-fixed-top">
                        <div class="navbar-inner">
                            <div class="container">
                                <a class="brand" href="#">Yoyyin</a>
                                <ul class="nav">
                                    <li>@Html.ActionLink("Hem", "Index", "Home")</li>
                                    <li>@Html.ActionLink("Om", "About", "Home")</li>
                                    <li>@Html.ActionLink("Kontakt", "Contact", "Home")</li>
                                    <li>@Html.ActionLink("Diskutera", "Index", "QandA")</li>
                                </ul>  
                                    <form class="navbar-search pull-left">
                                    <input type="text" class="search-query" placeholder="Search">
                                    </form>  
                                <ul class="nav pull-right">
                                    @Html.Partial("_LoginPartial")
                                </ul>
                            </div>
                        </div>
                    </nav>
            </div>
        </header>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
    </div>
    <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
                </div>
                <div class="float-right">
                    <ul id="social">
                        <li><a href="http://facebook.com" class="facebook">Facebook</a></li>
                        <li><a href="http://twitter.com" class="twitter">Twitter</a></li>
                    </ul>
                </div>
            </div>
        </footer>
</body>
</html>
