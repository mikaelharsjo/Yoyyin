@model IEnumerable<Yoyyin.Mvc.ViewModels.User>
@section jumbotron {
    <header class="jumbotron">
        <div class="container">
            <h1>Hitta en affärspartner<br /> och starta företag idag!</h1>
            <p class="lead">Yoyyin sammanför folk som vill hitta partners för att starta upp eller utveckla
                            sin företagsidé eller sitt företag. Det spelar ingen roll om du vill öppna en frisörsalong,
                            restaurang eller starta ett medicinteknikbolag - <br /> Yoyyin är till för alla som vill
                            förverkliga sina idéer och drömmar.</p>
        </div>
    </header>

}

<div class="row-fluid">
    <div class="span6">
        <div class="well">
            <h3>
                <img src="/Images/glyphicons_064_lightbulb.png" />
                Har du en affärsidé och vill ha en partner?
            </h3>
            <a href="/#/register">Registrera din affärsidé och få tillgång till matchning mm</a><br />
            <a href="/#/user/all">Visa alla personer, kanske finns din nya partner här redan?</a>
        </div>
        <div class="well">
            <h3>
                <img src="/Images/glyphicons_043_group.png" />
                Vill du förverkliga andras idéer?</h3>
            @Html.ActionLink("Visa alla affärsidéer", "List", "User")<br />
            <a class="registerLink">Registrera dig som entreprenör och få tillgång till matchning
                mm</a>
        </div>
        <div class="well">
            <h3>
                <img src="/Images/glyphicons_037_credit.png" />
                Är du finansiär som söker projekt?
            </h3>
            @Html.ActionLink("Visa alla affärsidéer som söker finansiering", "ListWantsFinancing", "User")<br />
            <a class="registerLink">Registrera dig som finansiär och få tillgång till matchning
                mm</a>
        </div>
    </div>
    <div class="span6">
        <div id="carousel" class="carousel slide">
            <!-- Carousel items -->
            <div class="carousel-inner">
                <div class="active item">
                    <img src="/Images/Carousel/cross-promote.jpg" class="span12 noFloat" />
                    <div class="carousel-caption">
                        <h4>Behöver du driv, engagemang eller spetskompetens?</h4>
                    </div>
                </div>
                <div class="item">
                    <img src="/Images/Carousel/handshake.png" class="span12 noFloat" />
                    <div class="carousel-caption">
                        <h4>
                            Har du en bra affärsidé men behöver stöd eller en viss kompetens för att förverkliga
                            den?</h4>
                    </div>
                </div>
                <div class="item">
                    <img src="/Images/Carousel/constructionteam.png" class="span12 noFloat" />
                    <div class="carousel-caption">
                        <h4>
                            Söker du ett bollplank för din affärsidé</h4>
                        <p>Eller finansiering?</p>
                    </div>
                </div>
                <div class="item">
                    <img src="/Images/Carousel/stock-photo-17098167-close-up-of-business-team.jpg" class="span12 noFloat" />
                    <div class="carousel-caption">
                        <h4>
                            Söker du ett bollplank för din affärsidé<br />
                            Eller finansiering?</h4>
                    </div>
                </div>
            </div>
            <!-- Carousel nav -->
            <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
            <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
        </div>
    </div>
</div>
<div class="row-fluid threeColumns">
    @Html.Partial("~/Views/Idea/ListStacked.cshtml", Model)
</div>

